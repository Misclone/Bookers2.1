<div>
  <h1>User info</h1>
  <%= image_tag @user.get_profile_image(100, 100), class:"mt-3"; %>
  
  <table class="table">
    <tbody>
      <tr>
        <th>name</th>
        <th><%= @user.name %></th>
      </tr>
      <tr>
        <th>introduction</th>
        <th><%= @user.introduction %></th>
      </tr>
    </tbody>
  </table>
  <div class="row">
    
  
    <%= link_to edit_user_path(@user.id),class: "btn btn-outline-secondary btn-block edit_user_#{@user.id}" do%>
      <i class="fas fa-user-cog"></i>
    <% end %>
  </div>
      
  <h2 class = "mt-3" >New book</h2>
  <!-- form_with部分 -->
  <%= form_with model: Book.new do |f| %>
    <h5>Title</h5>
    <%= f.text_field :title %>
  	
    <h5>Opinion</h5>
    <%= f.text_area :body %>
  	
    <input type="submit" name="commit" value="Create Book" class="actions btn btn-success" data-disable-with="Create Book">


  <% end %>

</div>